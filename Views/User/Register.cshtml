<h1>Register new user</h1>


<form method="post" style="text-align: center;">
    <label for="username" style="display: inline-block; width: 100px;">Username:</label>
    <input type="text" id="username" name="username" /> <br />
    <label for="password" style="display: inline-block; width: 100px;">Password:</label>
    <input type="password" id="password1" name="password1" /> <br />
    <label for="password" style="display: inline-block; width: 100px;">Repeat password:</label>
    <input type="password" id="password2" name="password2" /> <br />
    <label for="password" style="display: inline-block; width: 100px;">Email:</label>
    <input type="text" id="email" name="email" /> <br />

    <input type="submit" value="Submit" asp-page-handler="Submit" />
</form>

@if (ViewData.ContainsKey("RegisterMessage")){
    <h2>@ViewData["RegisterMessage"]</h2>
}